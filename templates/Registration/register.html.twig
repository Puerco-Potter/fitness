{% extends 'base4.html.twig' %}

    {% block stylesheets %}
    <style>

        .superior{
            height: 10%;
        }

        .superior2{
            height: 5%;
        }

        .contenido{
            height: 100%;
        }

        .etiqueta{
            color:white;
            text-shadow: 0px 0px 8px rgba(255,64,255,1), -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;;
            font-size: large;
        }
        .etiqueta2{
            color:light-black;
            text-shadow: -1px 0 white, 0 1px black, 1px 0 white, 0 -1px white;;
            font-size: large;
        }
        .btn-rosa{
                background-color: #e2048d;
                color:white;
            }

    </style>
      {% endblock %}
    {% block body %}
        <div class="contenido col-sm-6">
            <div class="superior"></div>
            <br> </br>     
            <div class="col-sm-10 etiqueta2 offset-1">
              <label class="font-weight-bold etiqueta"><h2>Nuevo Usuario </h2></label>
            </div></br> 
            <div class="col-sm-10 etiqueta2 offset-1">
              <label class="font-weight-bold etiqueta"><h3>Profesor: </h3></label>
            </div> 

            {{ form_start(form) }}
             <div class="col-sm-4 etiqueta2 offset-3">
                 <h6>{{ form_row(form.username) }}</h6>
             </div>
             <div class="col-sm-4 etiqueta2 offset-3">
                  <h6>{{ form_row(form.plainPassword.first) }}</h6>
             </div>
             <div class="col-sm-5 etiqueta2 offset-3">
                 <h6>{{ form_row(form.plainPassword.second) }}</h6>
             </div>
             <div class="col-sm-4 etiqueta2 offset-3 ">
                 <h6>{{ form_row(form.nombre) }}</h6>
             </div>     </br>
             <div class="col-sm-4 offset-3" >
                <h5> <button type="submit" class="btn-rosa "" >Registrar</button></h5>
             </div>
             <div class="form-group col-sm-4"  style="visibility:hidden"">
                 {{ form_row(form.roles) }}
                 {{ form_row(form.profesor) }}
                 {{ form_row(form.isActive) }}
             </div>
            {{ form_end(form) }}
        </div>
    {% endblock %}